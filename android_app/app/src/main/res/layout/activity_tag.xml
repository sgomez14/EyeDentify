<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TagActivity"
    android:orientation="vertical">


        <ImageView
            android:id="@+id/imgScannedItem"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:contentDescription="@string/imageContentDescription"
            app:srcCompat="@drawable/eyedentify_logo_black_gold"
            tools:srcCompat="@drawable/eyedentify_logo_black_gold"
            android:layout_margin="5dp"/>


        <TextView
            android:id="@+id/tvDescriptionLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:labelFor="@+id/tvDescription"
            android:text="@string/item_description_label"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_margin="5dp"/>

<!--        <TextView-->
