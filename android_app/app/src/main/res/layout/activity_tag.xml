<!--            android:textSize="20sp" />-->

        <EditText
            android:id="@+id/edtItemDescription"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="7"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/textContentDescription"
            android:inputType="textMultiLine"
            android:textColorHint="#546E7A"
            tools:ignore="DuplicateSpeakableTextCheck"
            android:importantForAutofill="no"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/tvWordsDetectedLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:labelFor="@+id/tvWordsDetected"
            android:text="@string/keywords_label"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_margin="5dp"/>

<!--        <TextView-->
<!--            android:id="@+id/tvWordsDetected"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_weight="3"-->
<!--            android:text="@string/keywords"-->
<!--            android:textSize="20sp" />-->

        <EditText
            android:id="@+id/edtItemKeywords"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:layout_weight="7"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/keywordContentDescription"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:textColorHint="#546E7A"
            android:enabled="true"
            android:minLines="3"
            android:maxEms="4"
            android:isScrollContainer="true"
            android:scrollbars="vertical"
            android:focusable="true"
            tools:ignore="DuplicateSpeakableTextCheck"
            />
        <androidx.cardview.widget.CardView

            android:id="@+id/cardViewAddPhoto"
            app:cardCornerRadius="50dp"
            android:layout_margin="5dp"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7">

                <ImageView
                    android:background="@drawable/orangestripe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/scan_item"
                    android:textSize="24sp"
                    android:textStyle="bold" />

        </androidx.cardview.widget.CardView>
